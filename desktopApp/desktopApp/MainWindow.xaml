<Window x:Class="BirthCodeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BirthID Analyzer" Height="500" Width="600" Background="#f4f4f4" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20">
            <StackPanel>
                <TextBlock Text="BirthID Analyzer" FontSize="20" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Enter NIC:" FontSize="14" FontWeight="SemiBold" Foreground="#555" Margin="0,5"/>
                <Border Background="#fff" CornerRadius="5" Padding="5" BorderBrush="#ccc" BorderThickness="1">
                    <TextBox x:Name="txtNIC" Width="300" Height="30" Background="Transparent" FontSize="14"/>
                </Border>

                <Button Content="Analyze" Width="120" Height="40" Background="#0078D7" Foreground="White" FontSize="14" FontWeight="Bold" 
                        Margin="0,15,0,0" HorizontalAlignment="Center" Cursor="Hand" Click="AnalyzeButton_Click"/>

                <Border Background="#e8f0fe" CornerRadius="5" Padding="10" Margin="10,20,10,0">
                    <TextBlock x:Name="lblResult" FontSize="14" Foreground="#333" TextWrapping="Wrap" TextAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>